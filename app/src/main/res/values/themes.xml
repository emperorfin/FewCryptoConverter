<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FewCryptoConverter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--TODO: rem-->
        <!-- <item name="cmc_HomeTabSelectColor">@color/white</item>-->
    </style>

    <style name="Widget.BottomNavigationView" parent="@style/Widget.Design.BottomNavigationView">
        <item name="android:textSize">@dimen/bottom_nav_text_size</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
    </style>

    <style name="BottomNavigation">
        <item name="paddingEnd">@dimen/bottom_nav_padding</item>
        <item name="paddingStart">@dimen/bottom_nav_padding</item>
    </style>

    <style name="title1SemiBold" parent="@style/cmcTexts">
        <item name="android:textSize">28.0sp</item>
        <item name="android:lineSpacingExtra">4.0sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="cmcTexts">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="title4SemiBold" parent="@style/cmcTexts">
        <item name="android:textSize">16.0sp</item>
        <item name="android:lineSpacingExtra">5.0sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="title3Medium" parent="@style/cmcTexts">
        <item name="android:textSize">20.0sp</item>
        <item name="android:lineSpacingExtra">4.0sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="footnoteRegularSmall" parent="@style/cmcTexts">
        <item name="android:textSize">@dimen/font_size_13sp</item>
        <item name="android:lineSpacingExtra">4.0sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="bodyMediumSmall" parent="@style/cmcTexts">
        <item name="android:textSize">@dimen/font_size_15sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="bodyMedium" parent="@style/cmcTexts">
        <item name="android:textSize">@dimen/font_size_16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="footnoteMediumSmall" parent="@style/cmcTexts">
        <item name="android:textSize">@dimen/font_size_13sp</item>
        <item name="android:lineSpacingExtra">4.0sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="cmcCardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/dimen_16dp</item>
        <item name="cardElevation">@dimen/dimen_24dp</item>
    </style>
</resources>